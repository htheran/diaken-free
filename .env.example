# Django Security Settings
# IMPORTANT: Copy this file to .env and fill with your actual values
# DO NOT commit .env to version control!

# Django Secret Key
# Generate new key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-change-this

# Debug Mode (False for production)
DJANGO_DEBUG=False

# Allowed Hosts (comma-separated)
# Example: myserver.example.com,10.100.18.80,localhost
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (comma-separated, with protocol)
# Example: https://myserver.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=

# Allowed Networks (CIDR ranges, comma-separated)
# Example: 10.104.10.0/24,10.100.5.0/24,192.168.1.0/24
# This allows entire network segments instead of individual IPs
DJANGO_ALLOWED_NETWORKS=10.104.10.0/24,10.100.5.0/24

# Encryption Key for credentials
# Generate new key with: python security_fixes/credential_encryption.py generate-key
ENCRYPTION_KEY=your-encryption-key-here-change-this

# Database Configuration (Optional - defaults to SQLite)
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3
# For PostgreSQL:
# DB_ENGINE=postgresql
# DB_NAME=diaken
# DB_USER=diaken
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Redis Cache (Optional)
# REDIS_URL=redis://localhost:6379/1

# Sentry DSN (Optional - for error tracking)
# SENTRY_DSN=
